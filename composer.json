{
    "name": "xgenious/installer",
    "description": "Laravel script installer package",
    "type": "library",
    "license": "BSD-2-Clause",
    "authors": [
        {
            "name": "Sharifur Rahman",
            "email": "ceo@xgenious.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "laravel/framework": "^12.13.0"
    },
    "require-dev": {
        "orchestra/testbench": "^10.0.0",
        "phpunit/phpunit": "^11.0.1"
    },
    "autoload": {
        "psr-4": {
            "Xgenious\\Installer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Xgenious\\Installer\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Xgenious\\Installer\\InstallerServiceProvider"
            ]
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    },
    "prefer-stable": true
}